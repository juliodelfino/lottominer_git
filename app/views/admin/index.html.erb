<h1 class="page-header">Admin Tools</h1>

<ul class="nav nav-tabs">
  <li class="active"><a data-toggle="tab"  href="#latest-results-tab">Latest Results</a></li>
  <li><a data-toggle="tab"  href="#database-tab">Database</a></li>
</ul>

<div class="tab-content">
  <div id="latest-results-tab" class="tab-pane fade in active">
		
	<% weekday = DateTime.now.wday 
		gamesToday = LottoGame.where("(draw_days like ? or draw_days=7) and active", "%#{weekday}%")
	%>
	<% gamesToday.each do |game| %>
		<p><%= game.name %></p>
	<% end %>
	
	<h3>Missing dates</h3>
	<p><%= DateTime.now.to_date.to_s %></p>
	<p><%= (DateTime.now-1.day).to_date.to_s %></p>
	<p><%= (DateTime.now-2.days).to_date.to_s %></p>
	<p><%= (DateTime.now-3.days).to_date.to_s %></p>
	
	
	<button id="get-latest-btn" class="btn btn-primary">Get Latest Results</button>
	<div id="dynamic-results-content">
	</div>
	
	<h3>System variables</h3>
	<p>Today: <%= DateTime.now.to_date %></p>
	<p>Today (in Singapore): <%= DateTime.now.to_date.in_time_zone('Singapore') %></p>
	<p>Time now: <%= Time.now %></p>
	<p>Time now (in Singapore): <%= Time.now.in_time_zone('Singapore') %></p>
	<p>Hour now (in Singapore): <%= Time.now.in_time_zone('Singapore').hour %></p>
	<p>Yesterday: <%= DateTime.now.to_date.yesterday %></p>
	<p>Yesterday (in Singapore): <%= DateTime.now.to_date.yesterday.in_time_zone('Singapore') %></p>
	<p>Previous date: <%= DateTime.now.to_date.prev_day %></p>
	<p>Previous date (in Singapore): <%= DateTime.now.to_date.prev_day.in_time_zone('Singapore') %></p>
	
	
  </div>
  <div id="database-tab" class="tab-pane fade">

	<select id="table_name" class="form-control list">
	  <option value=""></option>
	  <option value="LottoGame" <% if @selected_table == "LottoGame"%>selected="selected"<% end %>>LottoGame</option>
	  <option value="LottoResult" <% if @selected_table == "LottoResult"%>selected="selected"<% end %>>LottoResult</option>
	  <option value="FbUser" <% if @selected_table == "FbUser"%>selected="selected"<% end %>>FbUser</option>
	  <option value="UserNumber" <% if @selected_table == "UserNumber"%>selected="selected"<% end %>>UserNumber</option>
	  <option value="UserSetting" <% if @selected_table == "UserSetting"%>selected="selected"<% end %>>UserSetting</option>
	</select>
	
	<div id="dynamic-content">
		<%= render '/admin/db_table' %>
	</div>


  </div>
</div>

