

    <div class="container">

      <div class="row row-offcanvas row-offcanvas-right">

        <div class="col-xs-12 col-sm-9">
          <p class="pull-right visible-xs">
            <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
          </p>
          <h3>Draw Results (<%= @selected_date.strftime("%a, %B %d, %Y") %>)</h3> 
		  <a href="?date=<%=@prev_date %>" id="left-arrow">PREVIOUS</a>
		  <input type="hidden" id="datepicker" />
		  <a href="?date=<%=@next_date %>" id="right-arrow">NEXT</a>
          <div class="jumbotron">
            <h1><%= @latest_result.game %></h1>
            <h1><%= @latest_result.numbers %></h1>
            <p>Prize: <%= number_to_currency(@latest_result.jackpot_prize, unit: '₱') %><br />
               <% if @latest_result.winners > 0 %>
               	<span class="winners-bg">Winners: <%= @latest_result.winners %></span>
               	<% else %>Winners: <%= @latest_result.winners %>
               <% end %>
          </div>         
          <div class="row">
      	  	<% @other_results.each do |result| %> 
            <div class="col-xs-6 col-lg-4">             
				<h3><%= result.game %></h3>
	            <h3><%= result.numbers %></h3>
	            <p>Prize: <%= number_to_currency(result.jackpot_prize, unit: '₱') %><br />
	               <% if result.winners > 0 %>
	               	<span class="winners-bg">Winners: <%= result.winners %></span>
	               	<% else %>Winners: <%= result.winners %>
	               <% end %>

            </div>
		  	<% end %>
  
          </div><!--/row-->
        </div><!--/.col-xs-12.col-sm-9-->

        <div class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar">
          <div class="list-group">
	          <% if !controller.current_user.present? %>	
	            	<a href="/login/facebook" id="btn-login" class="btn btn-primary list-group-item active">
	    				<%= image_tag 'https://z-1-static.xx.fbcdn.net/rsrc.php/v2/yo/r/jVG1f1GslU7.png', width: 32 %>
						Sign in thru Facebook
					</a>
	          <% end %>
          </div>         
          
          <div class="list-group">
            <a href="#" class="list-group-item active">Monitor your number combination</a>
            <a href="#" class="list-group-item">Link</a>
            <a href="#" class="list-group-item">Link</a>
          </div>
        </div><!--/.sidebar-offcanvas-->
      </div><!--/row-->

    </div>