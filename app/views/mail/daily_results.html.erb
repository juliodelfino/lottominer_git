<div class="row">
	<p><h3>Here are the results for the PCSO lotto draw on <b><%= @draw_date.strftime("%B %d, %Y (%A)") %>.</b></h3></p>
	<% @lotto_results.each do |result| %>
	<div class="result-box <%= cycle('result-odd', 'result-even') -%>">
		<h2><%= result.game %>
		<br/>
		<%= ball_view result.numbers %></h2>
		<h3>
			<%= number_to_currency(result.jackpot_prize, unit: 'â‚±') %>
			<% if result.winners > 0 %>
			<span class="winners-bg badge"><%= pluralize(result.winners, 'winner')  %></span>
			<% end %>
		</h3>
	</div>
	<% end %>
</div>

<div class="row">
	<p class="footnote">
		You have received this email because you have subscribed to Daily Results emails from <%= Lottominer::Application::PROJECT_NAME %>.
		<br/>
		<a href="<%= request.base_url + '/mail/unsubscribe?id=' + @subscription.id.to_s %>">Click here if you want to unsubscribe.</a>
	</p>
</div>

